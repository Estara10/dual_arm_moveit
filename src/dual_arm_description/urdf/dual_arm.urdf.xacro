<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="dual_panda">

  <!-- ========================================================================= -->
  <!-- 1. 定义一个纯净的手臂宏 (直接引用 Mesh，不依赖官方逻辑) -->
  <!-- ========================================================================= -->
  <xacro:macro name="clean_arm" params="arm_id connected_to xyz:='0 0 0' rpy:='0 0 0'">
    <!-- 根关节 -->
    <joint name="${arm_id}_joint_base" type="fixed">
      <parent link="${connected_to}"/>
      <child link="${arm_id}_link0"/>
      <origin rpy="${rpy}" xyz="${xyz}"/>
    </joint>

    <link name="${arm_id}_link0">
      <visual><geometry><mesh filename="package://franka_description/meshes/robot_arms/fer/visual/link0.dae"/></geometry></visual>
      <collision><geometry><mesh filename="package://franka_description/meshes/robot_arms/fer/collision/link0.stl"/></geometry></collision>
    </link>
    <link name="${arm_id}_link1">
      <visual><geometry><mesh filename="package://franka_description/meshes/robot_arms/fer/visual/link1.dae"/></geometry></visual>
      <collision><geometry><mesh filename="package://franka_description/meshes/robot_arms/fer/collision/link1.stl"/></geometry></collision>
    </link>
    <joint name="${arm_id}_joint1" type="revolute">
      <origin rpy="0 0 0" xyz="0 0 0.333"/> <parent link="${arm_id}_link0"/> <child link="${arm_id}_link1"/> <axis xyz="0 0 1"/> <limit effort="87" lower="-2.8973" upper="2.8973" velocity="2.1750"/>
    </joint>
    <link name="${arm_id}_link2">
      <visual><geometry><mesh filename="package://franka_description/meshes/robot_arms/fer/visual/link2.dae"/></geometry></visual>
      <collision><geometry><mesh filename="package://franka_description/meshes/robot_arms/fer/collision/link2.stl"/></geometry></collision>
    </link>
    <joint name="${arm_id}_joint2" type="revolute">
      <origin rpy="${-pi/2} 0 0" xyz="0 0 0"/> <parent link="${arm_id}_link1"/> <child link="${arm_id}_link2"/> <axis xyz="0 0 1"/> <limit effort="87" lower="-1.7628" upper="1.7628" velocity="2.1750"/>
    </joint>
    <link name="${arm_id}_link3">
      <visual><geometry><mesh filename="package://franka_description/meshes/robot_arms/fer/visual/link3.dae"/></geometry></visual>
      <collision><geometry><mesh filename="package://franka_description/meshes/robot_arms/fer/collision/link3.stl"/></geometry></collision>
    </link>
    <joint name="${arm_id}_joint3" type="revolute">
      <origin rpy="${pi/2} 0 0" xyz="0 -0.316 0"/> <parent link="${arm_id}_link2"/> <child link="${arm_id}_link3"/> <axis xyz="0 0 1"/> <limit effort="87" lower="-2.8973" upper="2.8973" velocity="2.1750"/>
    </joint>
    <link name="${arm_id}_link4">
      <visual><geometry><mesh filename="package://franka_description/meshes/robot_arms/fer/visual/link4.dae"/></geometry></visual>
      <collision><geometry><mesh filename="package://franka_description/meshes/robot_arms/fer/collision/link4.stl"/></geometry></collision>
    </link>
    <joint name="${arm_id}_joint4" type="revolute">
      <origin rpy="${pi/2} 0 0" xyz="0.0825 0 0"/> <parent link="${arm_id}_link3"/> <child link="${arm_id}_link4"/> <axis xyz="0 0 1"/> <limit effort="87" lower="-3.0718" upper="-0.0698" velocity="2.1750"/>
    </joint>
    <link name="${arm_id}_link5">
      <visual><geometry><mesh filename="package://franka_description/meshes/robot_arms/fer/visual/link5.dae"/></geometry></visual>
      <collision><geometry><mesh filename="package://franka_description/meshes/robot_arms/fer/collision/link5.stl"/></geometry></collision>
    </link>
    <joint name="${arm_id}_joint5" type="revolute">
      <origin rpy="${-pi/2} 0 0" xyz="-0.0825 0.384 0"/> <parent link="${arm_id}_link4"/> <child link="${arm_id}_link5"/> <axis xyz="0 0 1"/> <limit effort="12" lower="-2.8973" upper="2.8973" velocity="2.6100"/>
    </joint>
    <link name="${arm_id}_link6">
      <visual><geometry><mesh filename="package://franka_description/meshes/robot_arms/fer/visual/link6.dae"/></geometry></visual>
      <collision><geometry><mesh filename="package://franka_description/meshes/robot_arms/fer/collision/link6.stl"/></geometry></collision>
    </link>
    <joint name="${arm_id}_joint6" type="revolute">
      <origin rpy="${pi/2} 0 0" xyz="0 0 0"/> <parent link="${arm_id}_link5"/> <child link="${arm_id}_link6"/> <axis xyz="0 0 1"/> <limit effort="12" lower="0.0175" upper="3.7525" velocity="2.6100"/>
    </joint>
    <link name="${arm_id}_link7">
      <visual><geometry><mesh filename="package://franka_description/meshes/robot_arms/fer/visual/link7.dae"/></geometry></visual>
      <collision><geometry><mesh filename="package://franka_description/meshes/robot_arms/fer/collision/link7.stl"/></geometry></collision>
    </link>
    <joint name="${arm_id}_joint7" type="revolute">
      <origin rpy="${pi/2} 0 0" xyz="0.088 0 0"/> <parent link="${arm_id}_link6"/> <child link="${arm_id}_link7"/> <axis xyz="0 0 1"/> <limit effort="12" lower="-2.8973" upper="2.8973" velocity="2.6100"/>
    </joint>
    <link name="${arm_id}_link8"/>
    <joint name="${arm_id}_joint8" type="fixed">
      <origin rpy="0 0 0" xyz="0 0 0.107"/> <parent link="${arm_id}_link7"/> <child link="${arm_id}_link8"/>
    </joint>
  </xacro:macro>

<!-- 2. 夹爪宏 (修改版：修复闪退 + 可活动的关节) -->
  <xacro:macro name="simple_hand" params="arm_id connected_to rpy:='0 0 0' xyz:='0 0 0'">
    <!-- 手掌基座 -->
    <joint name="${arm_id}_hand_joint" type="fixed">
      <parent link="${connected_to}"/> 
      <child link="${arm_id}_hand"/> 
      <origin xyz="${xyz}" rpy="${rpy}"/>
    </joint>
    <link name="${arm_id}_hand">
      <visual><geometry><mesh filename="package://franka_description/meshes/robot_ee/franka_hand_white/visual/hand.dae"/></geometry></visual>
      <!-- 如果之后运行手掌(hand)也报错找不到文件，请把下面这行的 collision/hand.stl 也改成 visual/hand.dae -->
      <collision><geometry><mesh filename="package://franka_description/meshes/robot_ee/franka_hand_white/collision/hand.stl"/></geometry></collision>
    </link>

    <!-- 左指头 -->
    <link name="${arm_id}_leftfinger">
       <visual><origin xyz="0 -0.007 0" rpy="0 0 ${pi}"/><geometry><mesh filename="package://franka_description/meshes/robot_ee/franka_hand_white/visual/finger.dae"/></geometry></visual>
       <collision><origin xyz="0 -0.007 0" rpy="0 0 ${pi}"/><geometry><mesh filename="package://franka_description/meshes/robot_ee/franka_hand_white/visual/finger.dae"/></geometry></collision>
    </link>
    <!-- 右指头 -->
    <link name="${arm_id}_rightfinger">
      <visual><origin xyz="0 0.007 0" rpy="0 0 0"/><geometry><mesh filename="package://franka_description/meshes/robot_ee/franka_hand_white/visual/finger.dae"/></geometry></visual>
      <collision><origin xyz="0 0.007 0" rpy="0 0 0"/><geometry><mesh filename="package://franka_description/meshes/robot_ee/franka_hand_white/visual/finger.dae"/></geometry></collision>
    </link>

    <!-- 关节定义 (保持之前的 prismatic 改动) -->
    <joint name="${arm_id}_finger_joint1" type="prismatic">
      <parent link="${arm_id}_hand"/>
      <child link="${arm_id}_leftfinger"/>
      <origin xyz="0 0 0.0584" rpy="0 0 0"/>
      <axis xyz="0 1 0"/> <!-- 沿 Y 轴滑动 -->
      <limit effort="20" lower="0.0" upper="0.09" velocity="0.2"/>
    </joint>

    <joint name="${arm_id}_finger_joint2" type="prismatic">
      <parent link="${arm_id}_hand"/>
      <child link="${arm_id}_rightfinger"/>
      <origin xyz="0 0 0.0584" rpy="0 0 0"/>
      <axis xyz="0 1 0"/> <!-- 沿 Y 轴滑动 -->
      <limit effort="20" lower="0.0" upper="0.09" velocity="0.2"/>
    </joint>
  </xacro:macro>
  <!-- ========================================================================= -->
  <!-- 3. 实例化：根连杆 base_link -->
  <!-- ========================================================================= -->
  <link name="base_link"/>

  <!-- 左臂 -->
  <xacro:clean_arm arm_id="panda_1" connected_to="base_link" xyz="-0.5 0 0" rpy="0 0 0"/>
  <xacro:simple_hand arm_id="panda_1" connected_to="panda_1_link8" rpy="0 0 ${-pi/4}"/>

  <!-- 右臂 -->
  <xacro:clean_arm arm_id="panda_2" connected_to="base_link" xyz="0.5 0 0" rpy="0 0 ${pi}"/>
  <xacro:simple_hand arm_id="panda_2" connected_to="panda_2_link8" rpy="0 0 ${-pi/4}"/>

  <!-- ========================================================================= -->
  <!-- 4. 硬件接口 (必不可少) -->
  <!-- ========================================================================= -->
  <ros2_control name="DualPandaFakeSystem" type="system">
    <hardware><plugin>mock_components/GenericSystem</plugin></hardware>
    <xacro:macro name="config_joint" params="name">
      <joint name="${name}">
        <command_interface name="position"/><state_interface name="position"><param name="initial_value">0.0</param></state_interface><state_interface name="velocity"/>
      </joint>
    </xacro:macro>
    <xacro:config_joint name="panda_1_joint1"/> <xacro:config_joint name="panda_1_joint2"/>
    <xacro:config_joint name="panda_1_joint3"/> <xacro:config_joint name="panda_1_joint4"/>
    <xacro:config_joint name="panda_1_joint5"/> <xacro:config_joint name="panda_1_joint6"/>
    <xacro:config_joint name="panda_1_joint7"/>
    <xacro:config_joint name="panda_2_joint1"/> <xacro:config_joint name="panda_2_joint2"/>
    <xacro:config_joint name="panda_2_joint3"/> <xacro:config_joint name="panda_2_joint4"/>
    <xacro:config_joint name="panda_2_joint5"/> <xacro:config_joint name="panda_2_joint6"/>
    <xacro:config_joint name="panda_2_joint7"/>
    <!-- 增加夹爪关节配置 -->
    <xacro:config_joint name="panda_1_finger_joint1"/>
    <xacro:config_joint name="panda_1_finger_joint2"/>
    
    <xacro:config_joint name="panda_2_finger_joint1"/>
    <xacro:config_joint name="panda_2_finger_joint2"/>
  </ros2_control>

</robot>

